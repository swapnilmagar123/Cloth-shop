

<main class="min-h-screen flex items-center justify-center bg-gradient-to-r from-orange-400 via-pink-500 to-purple-600 text-white relative overflow-hidden p-6 mt-10">

  <!-- Animated Background Blobs -->
  <div class="absolute -top-20 -left-20 w-72 h-72 bg-orange-400 rounded-full mix-blend-multiply filter blur-3xl opacity-40 animate-pulse"></div>
  <div class="absolute -bottom-24 -right-20 w-80 h-80 bg-pink-400 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-ping"></div>
  <div class="absolute top-1/3 -right-40 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-25 animate-bounce"></div>

  <!-- Checkout Card -->
  <div class="relative z-10 w-full max-w-lg bg-white rounded-3xl shadow-2xl p-8 text-gray-800 animate-fadeInUp">
    <h2 class="text-3xl font-extrabold text-center mb-6 text-indigo-700">ðŸ›’ Checkout</h2>

    <div class="bg-gray-100 rounded-xl p-4 mb-6 shadow-inner">
      <h3 class="font-semibold text-lg mb-2"><%= product.brand %> - <%= product.type %></h3>
      <p class="text-sm text-gray-600">Color: <%= product.color %></p>
      <p class="text-xl font-bold text-indigo-600 mt-2">â‚¹<%= product.price %></p>
    </div>

    <form action="/checkout/<%= product._id %>" method="POST" class="space-y-4">
      <div>
        <label for="name" class="block font-medium mb-1">Full Name</label>
        <input type="text" name="name" id="name" required
          class="w-full p-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
      </div>

      <div>
        <label for="address" class="block font-medium mb-1">Shipping Address</label>
        <textarea name="address" id="address" rows="3" required
          class="w-full p-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"></textarea>
      </div>

      <div>
        <label for="payment" class="block font-medium mb-1">Payment Method</label>
        <select name="payment" id="payment" required
          class="w-full p-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition">
          <option value="cod">Cash on Delivery</option>
          <option value="card">Credit/Debit Card</option>
          <option value="upi">UPI</option>
        </select>
      </div>

      <button type="submit"
        class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-bold py-3 rounded-xl shadow-lg hover:scale-105 transition transform">
        âœ… Place Order
      </button>
    </form>

    <a href="/products" class="block mt-4 text-center text-indigo-600 font-semibold hover:underline">
      ðŸ”™ Back to Products
    </a>
  </div>

</main>

<style>
  @keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeInUp {
    animation: fadeInUp 1s ease-in-out;
  }
</style>
