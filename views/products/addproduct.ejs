<main class="max-w-2xl mx-auto mt-12 p-8 bg-gradient-to-br from-white to-gray-50 shadow-xl rounded-2xl border border-gray-100">
  <!-- Heading -->
  

  <form action="/products/addproduct" method="POST" enctype="multipart/form-data" class="space-y-6">
    
    <!-- Brand -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Brand Name</label>
      <input type="text" name="brand" required
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900 placeholder-gray-400"
        placeholder="Nike, Adidas, Puma">
    </div>

    <!-- Product Type -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Product Type</label>
      <select name="type" required
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900">
        <option value="" disabled selected>-- Select Product Type --</option>
        <option value="T-Shirt">T-Shirt</option>
        <option value="Jeans">Jeans</option>
        <option value="Shoes">Shoes</option>
        <option value="Jacket">Jacket</option>
        <option value="Accessories">Accessories</option>
      </select>
    </div>

    <!-- Color -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Color</label>
      <input type="text" name="color" required
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900 placeholder-gray-400"
        placeholder="Red, Black, White">
    </div>

    <!-- Gender -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Gender</label>
      <select name="gender" required
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900">
        <option value="" disabled selected>-- Select Gender --</option>
        <option>Men</option>
        <option>Women</option>
        <option>Unisex</option>
      </select>
    </div>

    <!-- Sizes -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Available Sizes</label>
      <input type="text" name="sizes" required pattern="^[A-Za-z,\s]+$"
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900 placeholder-gray-400"
        placeholder="S, M, L, XL">
      <p class="text-xs text-gray-500 mt-1">Use comma-separated values (e.g., S, M, L, XL)</p>
    </div>

    <!-- Price -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Price (â‚¹)</label>
      <input type="number" name="price" min="1" required
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 p-3 text-gray-900 placeholder-gray-400"
        placeholder="999">
    </div>

    <!-- Discount -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Discount (%)</label>
      <input type="number" name="discount" min="0" max="100" value="0"
        class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 p-3 text-gray-900">
    </div>

    <!-- Image Upload -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Upload -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">Upload Product Image</label>
        <input type="file" name="imageFile" accept="image/*"
          class="block w-full text-sm text-gray-600 border border-gray-300 rounded-lg cursor-pointer bg-white shadow-sm focus:ring-2 focus:ring-blue-500">
      </div>
      <!-- Link -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2">Or Paste Image Link</label>
        <input type="url" name="imageLink"
          placeholder="https://example.com/image.jpg"
          class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 p-3 text-gray-900">
      </div>
    </div>

    <!-- Submit -->
    <button type="submit"
      class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold py-3 rounded-lg shadow-lg hover:from-blue-700 hover:to-blue-800 focus:ring-4 focus:ring-blue-300 transition-all">
      ðŸš€ Add Product
    </button>
  </form>
</main>
