<main class="max-w-2xl mx-auto mt-12 p-8 bg-white shadow-xl rounded-xl border border-gray-100 text-black">
  <h2 class="text-2xl font-bold mb-6">Edit Product</h2>

  <form action="/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
    

    <!-- Brand -->
    <div>
      <label class="block text-sm font-semibold mb-2">Brand</label>
      <input type="text" name="brand" value="<%= product.brand %>" required
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Type -->
    <div>
      <label class="block text-sm font-semibold mb-2">Product Type</label>
      <input type="text" name="type" value="<%= product.type %>" required
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Color -->
    <div>
      <label class="block text-sm font-semibold mb-2">Color</label>
      <input type="text" name="color" value="<%= product.color %>" required
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Gender -->
    <div>
      <label class="block text-sm font-semibold mb-2">Gender</label>
      <select name="gender" required class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
        <option value="Men" <%= product.gender==='Men' ? 'selected' : '' %>>Men</option>
        <option value="Women" <%= product.gender==='Women' ? 'selected' : '' %>>Women</option>
        <option value="Unisex" <%= product.gender==='Unisex' ? 'selected' : '' %>>Unisex</option>
      </select>
    </div>

    <!-- Sizes -->
    <div>
      <label class="block text-sm font-semibold mb-2">Sizes</label>
      <input type="text" name="sizes" value="<%= product.sizes.join(', ') %>" required
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Price -->
    <div>
      <label class="block text-sm font-semibold mb-2">Price (â‚¹)</label>
      <input type="number" name="price" value="<%= product.price %>" required
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Discount -->
    <div>
      <label class="block text-sm font-semibold mb-2">Discount (%)</label>
      <input type="number" name="discount" value="<%= product.discount %>" min="0" max="100"
        class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
    </div>

    <!-- Image URL -->
    <div>
      <label class="block text-sm font-semibold mb-2">Image URL</label>
      <input type="text" name="imageLink" value="<%= product.image %>" class="w-full rounded-lg border-gray-300 shadow-sm p-3 text-black">
      <small class="text-gray-500">Leave empty to keep current image</small>
    </div>

    <button type="submit" class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition">
      Update Product
    </button>
  </form>
</main>
